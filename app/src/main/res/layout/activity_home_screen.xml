<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvHeader"
        style="@style/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chooseCategoryString"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lvCategories" />

    <ListView
        android:id="@+id/lvCategories"
        style="@style/ListView"
        android:layout_width="350dp"
        android:layout_height="360dp"
        app:layout_constraintBottom_toTopOf="@+id/btViewBookmarks"
        tools:layout_editor_absoluteX="0dp">

    </ListView>

    <Button
        android:id="@+id/btViewBookmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Bookmarks"
        app:layout_constraintTop_toBottomOf="@id/lvCategories"
        tools:layout_editor_absoluteX="-5dp"
        android:onClick="viewBookmarks"/>

</LinearLayout>